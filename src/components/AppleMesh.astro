---
import astroLogo from '../assets/astro.svg';
---

<div class="container">
  <div class="gradient-background">
    <div class="apple-gradient">
      <div class="blob blob1"></div>
      <div class="blob blob2"></div>
      <div class="blob blob3"></div>
    </div>
  </div>
  
  <div class="iphone-grid-container">
    <img 
      src="/iphone-grid2.png"
      srcset="
        /iphone-grid2.png 320w,
        /iphone-grid2@2x.png 640w,
        /iphone-grid2@3x.png 960w"
      sizes="(max-width: 480px) 280px,
             (max-width: 768px) 320px,
             (max-width: 1024px) 380px,
             420px"
      alt="iPhone App Grid" 
      class="iphone-grid-image">
  </div>
  
  <main>
    <h1>언어와 함께, <br /> 더 효율적으로</h1>
  </main>
</div>

<style>
  @import url(//spoqa.github.io/spoqa-han-sans/css/SpoqaHanSansNeo.css);

  /* Reset and base styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --primary: #4d21fc;
    --secondary: #7828c8;
    --accent: #f41cf4;
    --background: #F8FAFC;
    --text: #000000;
    --text-light: #ffffff;
    --text-muted: rgba(0, 0, 0, 0.7);
    --radius: 12px;
    --shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    --gradient-scale-mid: 0.6;
    --gradient-scale-final: 1.1;
  }

  @media (min-width: 768px) {
    :root {
      --gradient-scale-mid: 0.8;
      --gradient-scale-final: 1.15;
    }
  }

  @media (min-width: 1024px) {
    :root {
      --gradient-scale-mid: 0.9;
      --gradient-scale-final: 1.2;
    }
  }

  @media (max-width: 480px) {
    :root {
      --gradient-scale-mid: 0.6;
      --gradient-scale-final: 1.1;
    }
  }

  body {
    background-color: var(--background);
    color: var(--text);
    font-family: 'Spoqa Han Sans Neo', 'Inter', system-ui, sans-serif;
  }

  /* Container layout with responsive height */
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 650px; /* Fixed height instead of vh for better control */
    padding: 16px;
    position: relative;
    overflow: hidden;
  }

  /* Updated gradient background */
  .gradient-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background-color: #F8FAFC;
    overflow: hidden;
  }

  .apple-gradient {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: -1;
    filter: saturate(1.05);
    will-change: transform, opacity;
  }

  .blob {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transform: scale(0.2);
    filter: blur(100px);
    animation: blob-expand 4s ease-out forwards, blob-drift 14s ease-in-out infinite alternate;
  }

  .blob1 {
    background: radial-gradient(circle at 30% 30%, #A7F3D0 0%, transparent 60%);
    animation-delay: 0s;
  }

  .blob2 {
    background: radial-gradient(circle at 70% 50%, #FFD1A6 0%, transparent 65%);
    animation-delay: 0.2s;
  }

  .blob3 {
    background: radial-gradient(circle at 50% 80%, #A6D5FF 0%, transparent 70%);
    animation-delay: 0.4s;
  }

  @keyframes blob-expand {
    0% {
      opacity: 0;
      transform: scale(0.2);
    }
    50% {
      opacity: 0.6;
      transform: scale(0.9);
    }
    100% {
      opacity: 1;
      transform: scale(1.4);
    }
  }

  @keyframes blob-drift {
    from {
      transform: translate3d(0px, 0px, 0) scale(1.4);
    }
    to {
      transform: translate3d(10px, -10px, 0) scale(1.5);
    }
  }

  /* Add soft noise texture */
  .apple-gradient::after {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.75' numOctaves='2' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
    pointer-events: none;
    z-index: 2;
  }

  h1 {
    font-size: clamp(32px, 7vw, 58px);
    font-weight: 600;
    text-align: center;
    line-height: 1.15;
    letter-spacing: -0.02em;
    font-family: -apple-system, 'SF Pro Display', 'Spoqa Han Sans Neo', system-ui, sans-serif;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Position the text above the phone */
  main {
    position: relative;
    z-index: 3;
    margin-bottom: 70px; /* Reduced space for all devices by default */
  }

  /* Reposition iPhone grid image like in reference */
  .iphone-grid-container {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .iphone-grid-image {
    width: 85%;
    max-width: 220px; /* Smaller by default */
    height: auto;
    display: block;
  }

  /* Responsive adjustments for devices */
  @media (min-width: 768px) {
    /* Tablet */
    .container {
      min-height: 500px; /* Much shorter on tablets */
    }
    
    .iphone-grid-image {
      max-width: 300px;
    }
    
    main {
      margin-bottom: 90px;
    }
    
    h1 {
      font-size: clamp(42px, 7.5vw, 86px);
      line-height: 1.1;
    }
  }

  @media (min-width: 1024px) {
    /* Desktop */
    .container {
      min-height: 100vh; /* Full height on desktop */
    }
    
    .iphone-grid-image {
      max-width: 420px;
      width: 65%;
    }
    
    main {
      margin-bottom: 200px; /* More space on desktop */
    }
    
    h1 {
      font-size: clamp(48px, 8vw, 112px);
      line-height: 1.05;
      padding: 0 30px;
    }
  }

  @media (max-width: 480px) {
    /* Small mobile */
    .container {
      min-height: 450px; /* Much shorter height for mobile */
    }
    
    .iphone-grid-image {
      max-width: 200px; /* Even smaller on mobile */
    }
    
    main {
      margin-bottom: 50px; /* Much less margin on mobile */
    }
  }
</style>
